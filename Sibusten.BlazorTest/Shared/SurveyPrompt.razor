<Alert Color="Color.Secondary" Visible="true">
    <AlertMessage>
        <Icon Name="IconName.Pen" />
        @Title
    </AlertMessage>
    <AlertDescription>
        Please take our
        <Blazorise.Link To="https://go.microsoft.com/fwlink/?linkid=2137916" Target="Target.Blank">
            <strong>brief survey</strong>
        </Blazorise.Link>
        and tell us what you think.
    </AlertDescription>
</Alert>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
